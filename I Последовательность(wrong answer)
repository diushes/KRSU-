numbers=[int(a) for a in input().split(' ')]
if len(numbers)==3:
  numoftimes=numbers[2]-2
  d=numbers[1]-numbers[0]
  correctinput=False

  if numbers[0]>=1 and numbers[0]<=1000 and numbers[1]>=1 and numbers[1]<=1000 and numbers[2]>=3 and numbers[2]<=1000:
    correctinput=True
  if correctinput==True:
    for t in range(numoftimes):
      numbers[1]=numbers[1]+1
    print(numbers[1])

